<xar:set name="alttext"><xar:mlstring>Click to select a color</xar:mlstring></xar:set>
<xar:set name="classinfo">!empty($class)? " $class" : ''</xar:set>
<input type="text" class="color {hash:true,caps:true}#$class#" name="#$name#" id="#$id#" value="#$value#" size="#$size#" maxlength="#$maxlength#"#$html5##$evts# />

<xar:if condition="!empty($invalid)">
    <span class="xar-error">#$invalid#</span>
</xar:if>