<xar:if condition="count($options) gt 0">
    <xar:foreach in="$options" value="$option" key="$key" >
        <xar:if condition="$key == 0">
            <xar:set name="theID">$id</xar:set>
        <xar:else />
            <xar:set name="theID">$id.'_'.$key</xar:set>
        </xar:if>
        <xar:comment>The original check on isset generated a full list being checked</xar:comment>
        <xar:if condition="($option['checked'] eq 1)">
            <input type="checkbox" name="#$name#[]" id="#$theID#" value="#$option['id']#" checked="true"#$html5##$evts# />
        <xar:else />
            <input type="checkbox" name="#$name#[]" id="#$theID#" value="#$option['id']#"#$html5##$evts# />
        </xar:if>
        <label for="#$theID#">#$option['name']# </label>
    </xar:foreach>
<xar:else />
    <xar:mlstring>No options specified for CheckBox Mask in validation field.</xar:mlstring>
</xar:if>

<xar:if condition="!empty($invalid)">
    <span class="xar-error">#$invalid#</span>
</xar:if>
